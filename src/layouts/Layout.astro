---
import "aos/dist/aos.css"
import Sidenav from '@ui/Sidenav.astro';
import { Notification } from "@ui/components/notification";
import { Toaster } from '@components/toaster/toaster';
import { ViewTransitions } from "astro:transitions"

interface Props {
  title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8"/>
    <meta name="generator" content={ Astro.generator } />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="icon" href="/icons/favicon-light.svg" />
    <title>{ title }</title>
    <ViewTransitions />
  </head>
  <body class="relative bg-woodsmoke-100 text-woodsmoke-950 font-poppins w-screen h-screen overflow-x-hidden overflow-y-auto min-h-screen min-w-full dark:bg-woodsmoke-950 dark:text-woodsmoke-50">      
    <Sidenav/>
    <main class="relative h-auto m-auto flex flex-col items-start max-sm:w-[80%] max-md:w-[70%] md:w-[60%] sm:justify-center transition-all duration-100 ease-in">
      <slot/>
    </main>
    <Notification/>
    <Toaster client:load/>
  </body>
</html>
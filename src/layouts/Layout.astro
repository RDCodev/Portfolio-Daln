---
import Sidenav from '@ui/Sidenav.astro';
import "aos/dist/aos.css"
import { ViewTransitions } from "astro:transitions"

interface Props {
  title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8"/>
    <meta name="generator" content={ Astro.generator } />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/icons/light-favicon.svg"/>
    <link rel="stylesheet" href="/styles/global.css"/>
    <title>{ title }</title>
    <ViewTransitions />
  </head>
  <body class="relative bg-woodsmoke-100 dark:bg-woodsmoke-950 text-woodsmoke-950 dark:text-woodsmoke-50 font-poppins w-full h-screen flex flex-col">      
    <Sidenav/>
    <main class="relative max-sm:w-4/5 sm:w-3/5 md:w-1/2 flex-1 m-auto flex flex-col items-start max-sm:justify-start sm:justify-center transition-all">
      <slot/>
    </main>
    <div class="fixed w-max h-max py-2 px-4 border border-woodsmoke-800 rounded-lg bg-woodsmoke-800 shadow-md top-5 right-10">
      <div class="absolute top-0 right-0 -mt-1 -mr-1">
        <span class="relative flex h-3 w-3">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-orange-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-3 w-3 bg-orange-500"></span>
        </span>
      </div>
      <span class="text-sm font-medium tracking-wide">Under construction...</span>
    </div>
    <script>
      import { aosInit } from "@libs/aos";
      aosInit();
    </script>
  </body>
</html>